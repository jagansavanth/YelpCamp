<% include ../partials/header %>

<div class="container text-center">
    
    <div>

        <h1> This is page to add new campgrounds</h1>
        <div style="width: 30%; margin: 25px auto;">
       
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name of campground">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder=" $ per night" min="0.01" step="0.01" >
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-md btn-block"> Submit </button>
                </div>
                <a href="/campgrounds"> Campgrounds page</a>
            </form>
         </div>
    </div>

</div>

<% include ../partials/footer %>